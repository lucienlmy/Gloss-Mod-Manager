{
    "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
    "appId": "gmm.aoe.top",
    "asar": true,
    "icon": "public/favicon.ico",
    "productName": "Gloss Mod Manager",
    "copyright": "Copyright Â© ${author}",
    "directories": {
        "output": "release/${version}"
    },
    "files": [
        "dist-electron",
        "dist"
    ],
    // "mac": {
    //     "artifactName": "${productName}_${version}.${ext}",
    //     "target": [
    //         "dmg"
    //     ]
    // },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "publish": {
            "provider": "generic",
            "url": "https://dmod.3dmgame.com/updates/windows/"
        },
        // "artifactName": "${productName}_${version}.${ext}",
        // "certificateFile": "./.key/gmm.pfx",
        // "certificatePassword": "MUGqwPYqBD7QY2c3p7hWqhsB8cg8cSNPNNS3dr3gJ9a2H3stI1",
        // "publisherName": "aoe.top"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": false,
        "uninstallDisplayName": "${productName} ${version}",
        "artifactName": "${productName}_${version}.${ext}",
        "shortcutName": "${productName}"
    },
    "fileAssociations": {
        "ext": "gmm",
        "name": "Gloss Mod Manager",
        "description": "Gloss Mod Manager File",
        "icon": "public/favicon.ico",
        "role": "Shell"
    },
    "extraResources": {
        "from": "./resources/",
        "to": ""
    }
}